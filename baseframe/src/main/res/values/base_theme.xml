<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" />


    <style name="BaseTheme.Default" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:progressBarStyle">@style/Base.Layout.Wrap.ProgressBar</item>
        <!-- 列表分割线-->
        <!--<item name="RecyclerViewDivider">@drawable/sky_default_divider</item>-->
        <!--<item name="RecyclerViewGridDivider">@drawable/sky_default_divider</item>-->

        <!-- 按下效果 -->
        <!--<item name="selectableItemBackground">@drawable/sky_click_selector</item>-->
        <!--<item name="android:listChoiceBackgroundIndicator">@drawable/sky_click_selector</item>-->
    </style>

    <style name="BaseTheme.Default.Back">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Special themes -->
    <style name="BaseTheme.Default.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/base_click_pressed</item>
        <item name="colorPrimaryDark">@color/base_click_pressed</item>
        <item name="colorAccent">@color/base_click_pressed</item>
        <item name="android:progressBarStyle">@style/Base.Layout.Wrap.ProgressBar</item>
        <!-- 列表分割线-->
        <item name="BaseRecyclerViewDivider">@drawable/base_default_divider</item>
        <item name="BaseRecyclerViewGridDivider">@drawable/base_default_divider</item>

        <!-- 按下效果 -->
        <!--<item name="selectableItemBackground">@drawable/sky_click_selector</item>-->
        <!--<item name="android:listChoiceBackgroundIndicator">@drawable/sky_click_selector</item>-->
    </style>

    <style name="BaseToolbar" />

    <style name="BaseToolbar.Custom">
        <!-- 设置该属性解决空白部分 默认 16dp-->
        <item name="contentInsetStart">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:theme">@style/BaseToolbar.Theme</item>
    </style>

    <style name="BaseToolbar.Theme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="homeAsUpIndicator">@mipmap/base_toolbar_back</item>
    </style>




    <color name="BaseTabsBackground">#6633B5E5</color>
    <color name="BaseTabsText">#FF666666</color>
</resources>